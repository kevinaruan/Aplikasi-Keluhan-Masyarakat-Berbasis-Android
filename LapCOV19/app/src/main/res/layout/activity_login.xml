<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_custome"
    tools:context=".ui.Login">


    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@drawable/custom_rectangle"
        android:layout_below="@+id/profil"
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profil2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="110dp"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/profile" />

        <TextView
            android:layout_below="@id/profil2"
            android:layout_centerHorizontal="true"
            android:id="@+id/label"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"></TextView>


    <EditText
        android:drawableLeft="@drawable/ic_action_email"
        android:id="@+id/user"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:hint="Username"
        android:typeface="serif"/>



    <EditText
        android:drawableLeft="@drawable/ic_action_password"
        android:id="@+id/pass"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user"
        android:layout_marginLeft="40dp"
        android:hint="Password"
        android:typeface="serif"/>

    <Button
        android:layout_marginBottom="10dp"
        android:id="@+id/btnlogin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/custom_rectangle"
        android:layout_below="@id/pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="150dp"
        android:backgroundTint="#0000ff"
        android:textStyle="bold"
        android:typeface="serif"
        android:text="Login"
        android:textColor="#FFFFFEFF"
        android:textColorHint="#000000"/>
        <TextView
            android:layout_marginStart="60dp"
            android:id="@+id/label2"
            android:layout_below="@+id/btnlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_alignParentStart="true"
            android:text="Pengguna Baru?     "/>
        <TextView
            android:textColor="#0000ff"
            android:id="@+id/daftar"
            android:layout_toRightOf="@+id/label2"
            android:layout_below="@+id/btnlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Daftar"/>
    </RelativeLayout>

</RelativeLayout>